#!/bin/sh

set -e

case "$1" in
	configure)
		update-alternatives \
			--install /lib/plymouth/themes/default.plymouth default.plymouth \
				/lib/plymouth/themes/xubuntu-logo/xubuntu-logo.plymouth 150
		
		if which update-initramfs >/dev/null 2>&1
		then
			update-initramfs -u
		fi
		;;
esac

